# Copy this file to create your environment files:
# - .env (local development - network accessible)
# - .env.production (production deployment)

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=127.0.0.1

# CORS Configuration (comma-separated origins)
# Local: http://localhost:5173
# Mobile: http://localhost:5173,http://YOUR_DESKTOP_IP:5173
# Production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=http://localhost:5173

# Database Configuration
POSTGRES_URL_LOCAL=postgres://postgres:postgres@localhost:5432/boardgame_ref
POSTGRES_URL=postgres://user:password@production-host:5432/boardgame_ref

# JWT Configuration (generate with: openssl rand -hex 64)
JWT_ACCESS_SECRET=your_access_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_ACCESS_EXPIRES_IN_SECONDS=900
JWT_REFRESH_EXPIRES_IN_SECONDS=2592000

# Token cleanup (cron + retention)
TOKEN_CLEANUP_CRON=0 3 * * *
REFRESH_TOKEN_CLEANUP_REVOKED_RETENTION_DAYS=7
REFRESH_TOKEN_CLEANUP_EXPIRED_GRACE_DAYS=1
EMAIL_VERIFICATION_CLEANUP_USED_RETENTION_DAYS=7
EMAIL_VERIFICATION_CLEANUP_EXPIRED_GRACE_DAYS=1

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Apple OAuth
# Native (iOS) uses the app bundle ID as client_id.
# Web uses a Service ID as client_id and requires a redirect URI.
APPLE_CLIENT_ID_NATIVE=com.yourcompany.app
APPLE_CLIENT_ID_WEB=com.yourcompany.app.web
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
APPLE_REDIRECT_URI_WEB=https://yourdomain.com/auth/oauth/apple/callback

# Postmark (Email)
POSTMARK_SERVER_TOKEN_SANDBOX=your_postmark_sandbox_token
POSTMARK_SERVER_TOKEN_LIVE=your_postmark_live_token
POSTMARK_FROM_EMAIL=no-reply@yourdomain.com
POSTMARK_MESSAGE_STREAM=outbound
